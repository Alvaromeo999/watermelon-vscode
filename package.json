{
  "name": "watermelon-tools",
  "description": "Watermelon, find all the historical context of your code",
  "version": "1.2.3",
  "publisher": "WatermelonTools",
  "displayName": "Watermelon",
  "private": true,
  "license": "See license.md (Apache)",
  "repository": {
    "type": "git",
    "url": "https://github.com/orgs/watermelontools/"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Github",
    "Comments",
    "PRs",
    "Repo",
    "Context",
    "Pull request",
    "Blame",
    "Git"
  ],
  "icon": "images/logo.png",
  "activationEvents": [
    "onCommand:watermelon.start",
    "onWebviewPanel:watermelon",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "watermelon.start",
        "title": "Get Pull Requests with Watermelon",
        "category": "watermelon"
      },
      {
        "command": "watermelon.show",
        "title": "Show watermelon",
        "category": "watermelon"
      },
      {
        "command": "watermelon.blame",
        "title": "Get Commit History with Watermelon",
        "category": "watermelon"
      }
    ],
    "views": {
      "watermelon": [
        {
          "type": "webview",
          "id": "watermelon.sidebar",
          "name": "watermelon"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "watermelon",
          "title": "Watermelon",
          "icon": "images/wmbw_bold_fill.svg"
        }
      ],
      "panel": [
        {
          "id": "watermelon",
          "title": "watermelon",
          "icon": "images/wmbw_bold_fill.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "watermelon",
        "contents": "You have not yet signed in with GitHub\n[Sign in](command:watermelon.signin)",
        "when": "config.git.enabled && watermelon.isLoggedInGithub==false"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "watermelon.start",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "deploy": "vsce publish --yarn",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.63.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.39",
    "eslint": "^7.21.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.4.3",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "@octokit/core": "^3.5.1",
    "@octokit/rest": "^18.12.0",
    "@vscode/extension-telemetry": "^0.5.1",
    "@vscode/test-electron": "^2.1.2",
    "axios": "^0.26.1",
    "octokit": "^1.7.1"
  }
}
